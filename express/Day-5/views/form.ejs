<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <h1>Form</h1>
    <form action="/" method="POST" enctype="multipart/form-data">
        <!-- application/pdf -->
        <!-- image/* -->
        <input type="file" name="image" id="nn" hidden accept="image/*">
        <label for="nn">
            <img src="https://jenwlee.com/wp-content/uploads/2021/01/uploadfiles.png" alt="" height="200" width="200" id="image_tag">
        </label>
        <input type="text" name="content">
        <input type="color" name="color">
        <input type="submit">
    </form>
</body>

<script>
    let image=document.querySelector("#nn");
    let image_tag=document.querySelector("#image_tag");
    image.addEventListener("change",(e)=>{
       setTimeout(()=>{
        image_tag.src=URL.createObjectURL(e.target.files[0]);
       },500)
    })
</script>
</html>